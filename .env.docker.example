# CompanyOS Docker Environment Configuration
# Copy this file to .env.docker and update the values

# Company Configuration
COMPANY_NAME=CompanyOS
COMPANY_TAGLINE=Enterprise Management Platform

# Application Configuration
NODE_ENV=production
PORT=5000
DOMAIN=localhost

# Database Configuration
DB_PASSWORD=companyos123
DB_PORT=5432

# Redis Configuration (Optional)
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# Session Security
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/fullchain.pem
# SSL_KEY_PATH=/path/to/privkey.pem

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=7
# BACKUP_S3_BUCKET=companyos-backups

# Monitoring (Optional)
# MONITORING_ENABLED=true
# SENTRY_DSN=https://your-sentry-dsn

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@company.com
# SMTP_PASS=your-app-password